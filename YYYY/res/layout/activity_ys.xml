<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/yellow1"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/total_ys"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_ys"
            android:textSize="25sp" >
        </TextView>

        <TextView
            android:id="@+id/number_ys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/ys_init"
            android:textSize="25sp" >
        </TextView>
    </LinearLayout>

    <!-- EditText -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false" >
        </EditText>
    </LinearLayout>
    <!-- 选择类别以及左部键盘 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/kind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/type_consume"
                android:gravity="left"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- 可选类别 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/clothes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:text="@string/clothes"
                    android:textSize="27sp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/eat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:text="@string/eat"
                    android:textSize="27sp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:text="@string/house"
                    android:textSize="27sp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/walk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:button="@null"
                    android:text="@string/walk"
                    android:textSize="27sp" >
                </RadioButton>
            </RadioGroup>
            <!-- 类别money显示区 -->

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/show_clothes"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="30dp"
                    android:text="@string/ys_init"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/show_eat"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="30dp"
                    android:text="@string/ys_init"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/show_house"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="30dp"
                    android:text="@string/ys_init"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/show_walk"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:paddingLeft="30dp"
                    android:text="@string/ys_init"
                    android:textSize="27sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/number_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/one" />

                    <Button
                        android:id="@+id/number_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/two" />

                    <Button
                        android:id="@+id/number_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/three" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/number_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/four" />

                    <Button
                        android:id="@+id/number_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/five" />

                    <Button
                        android:id="@+id/number_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/six" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/number_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seven" />

                    <Button
                        android:id="@+id/number_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eight" />

                    <Button
                        android:id="@+id/number_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/number_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zero" />

                    <Button
                        android:id="@+id/number_float"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/point" />

                    <Button
                        android:id="@+id/number_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/sure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="60dp"
            android:text="@string/sure" >
        </Button>

        <Button
            android:id="@+id/back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="65dp"
            android:text="@string/back" >
        </Button>
    </LinearLayout>

</LinearLayout>